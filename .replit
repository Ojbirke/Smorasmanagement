modules = ["python-3.11"]

[nix]
channel = "stable-23_11"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Django Server"

[[workflows.workflow]]
name = "Django Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd smorasfotball && python -m pip install django pandas openpyxl reportlab && python manage.py migrate && python manage.py runserver 0.0.0.0:5000"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "cd smorasfotball && DATABASE_DIR=../deployment gunicorn --bind 0.0.0.0:5000 smorasfotball.wsgi:application"]
build = ["sh", "-c", "bash pre_deploy.sh"]

[deployment.nix]
enable = false

[[ports]]
localPort = 5000
externalPort = 80
